@model IEnumerable<ProductManagementSystem.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Products</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CostPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Qty)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CostPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Qty)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.ProductNo">Details</a> 
                @if (User.Identity.IsAuthenticated)
                {
                   <a asp-action="Edit" asp-route-id="@item.ProductNo">   |  Edit  |  </a> 
                   <a asp-action = "Delete" asp-route-id = "@item.ProductNo" > Delete </a>
                }
            </td>
        </tr>
}
    </tbody>
</table>



<p>
    @if (User.Identity.IsAuthenticated)
    {
        <a asp-action="Create">Add a New Product</a>
    }
</p>
